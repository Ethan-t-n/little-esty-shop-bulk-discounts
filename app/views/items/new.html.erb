<h1>New Item</h1>

<%= form_with url: merchant_items_path(@merchant), method: :post do |f| %>

  <%= f.label :name %>
  <%= f.text_field :name %>

  <%= f.label :description %>
  <%= f.text_field :description %>

  <%= f.label :unit_price %>
  <%= f.number_field :unit_price %>

  <%= f.submit %>
<% end %>
