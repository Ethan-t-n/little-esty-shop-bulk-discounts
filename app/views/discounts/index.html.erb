<h1><%= @merchant.name %> Discounts</h1>
<p><%= link_to "Create a New Discount", "/merchants/#{@merchant.id}/discounts/new" %></p>
<div id="discounts">
    <% @merchant.discounts.each do |discount| %>
        <div class="discount">
            <p>Percent Discount: <%= discount.percent %>%</p>
            <p>Quantity Threshold Of: <%= discount.quantity_threshold %></p>
            <p><%= link_to "View Discount #{discount.id}", "/merchants/#{@merchant.id}/discounts/#{discount.id}" %></p>
            <p><%= button_to "Delete Discount: #{discount.id}", "/merchants/#{@merchant.id}/discounts/#{discount.id}", method: :delete %> </p>
        </div>
    <% end %>
</div>

<h3>Upcoming Holidays</h3>
  <% search = HolidaySearch.new %>
  <% search.holiday_info.each do |holiday| %>
      <p>Name: <%= holiday.name %></p>
      <p>Date: <%= holiday.date %></p>
  <% end %>